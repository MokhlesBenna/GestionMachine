{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - Technicien{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Bienvenue, {{ app.user.nom }} {{ app.user.prenom }}</h2>
        <p class="text-muted">Voici un aperçu rapide de vos responsabilités</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-tools fa-3x text-primary"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Pannes Assignées</h5>
                        <p class="card-text display-6">{{ total_pannes_assigned }}</p>
                        <a href="{{ path('panne_index') }}" class="btn btn-sm btn-outline-primary">Voir les pannes</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-cogs fa-3x text-success"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Machines Actives</h5>
                        <p class="card-text display-6">{{ total_active_machines }}</p>
                        <a href="{{ path('technicien_machine_list') }}" class="btn btn-sm btn-outline-success">Voir les machines</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>0
    .card-body i {
        width: 60px;
        height: 60px;
        background: #f0f2f5;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
</style>
{% endblock %}
